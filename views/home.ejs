<section id="post-section">
    <h2>Posts</h2>  
    <% if(locals.user) { %>
    <form action="/posts/create" id="post-form" method="POST">
        <h4>Add a post</h4>
        <textarea name="content" cols="30" rows="3" placeholder="Write a post..." required></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>
    
    <ul>
        <% for(let a of posts) { %>
            <li>
                <p>
                    <%= a.content %>
                    <br>
                    <small>
                        <%= a.user.name %>
                    </small>
                </p>
            </li>
        <% } %>
    </ul>
    
</section>