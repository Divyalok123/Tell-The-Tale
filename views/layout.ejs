<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="shortcut icon" href="/images/fv.ico" type="image/x-icon">

        <!-- For notifications  -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <!---->

        <!-- Jquery -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

        <script src="https://kit.fontawesome.com/fcba9de078.js" crossorigin="anonymous"></script>

        <link href="<%= assetPath('css/layout.css') %>" rel="stylesheet" >
        <link href="<%= assetPath('css/header.css') %>" rel="stylesheet" >
        <link href="<%= assetPath('css/footer.css') %>" rel="stylesheet" >
        <link href="<%= assetPath('css/home.css') %>" rel="stylesheet" >
        <link href="<%= assetPath('css/user_profile.css') %>" rel="stylesheet" >
        <link href="<%= assetPath('css/user_sign_in.css') %>" rel="stylesheet" >
        <link href="<%= assetPath('css/posts.css') %>" rel="stylesheet" >
        <link href="<%= assetPath('css/chatbox.css') %>" rel="stylesheet" >
        <%- style %>
    </head>
    <body>

        <%- include('_header'); %>

        <main id="layout-main">
            <%- body %> <!-- This is defined in library -->
        </main>

        <%- include('_footer'); %>

        <%- script %>

        <!-- Accessing flash messages and displaying with noty -->
        <script>
            <% if(flash.success && flash.success.length > 0) { %>
                new Noty({
                    theme: 'nest',
                    text: '<%= flash.success %>',
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1000
                }).show();
            <% } %> 

            <% if(flash.error && flash.error.length > 0) { %>
                new Noty({
                    theme: 'nest',
                    text: '<%= flash.error %>',
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1000
                }).show();
            <% } %> 
        </script>
    </body>
</html>