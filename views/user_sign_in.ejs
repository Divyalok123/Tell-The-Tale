<div class="box" id="sign-in-box">
    <form method="POST" action="/users/login" class="form" id="sign-in-form">
        <div>
            <label class="input-label" for="username">Username</label>
            <input type="text" name="username" id="username" class="input-field" required>
        </div>

        <div>
            <label class="input-label" for="password">Password</label>
            <input type="password" name="password" id="password" class="input-field" required>
        </div>

        <input type="submit" id="submit" class="submit-btn">
    </form>
</div>