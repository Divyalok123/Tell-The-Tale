<div id="sign-up-box" class="box">
    <form action="/users/create" method="POST" class="form" id="sign-up-form">
        <div>
            <label for="name" class="input-label block">Name</label>
            <input type="text" id="name" name="name" class="input-field" required>
        </div>

        <div>
            <label for="email" class="input-label block">Email</label>
            <input type="email" id="email" name="email" class="input-field" required>
        </div>

        <div>
            <label for="password" class="input-label block">Password</label>
            <input type="password" id="password" name="password" class="input-field" required>
        </div>

        <div>
            <label for="confirm-pass" class="input-label block">Confirm Password</label>
            <input type="password" id="confirm-pass" name="confirm_pass" class="input-field" required>
        </div>

        <input type="submit" id="submit" class="submit-btn" value="Sign Up">


        <p>
            <a class="google-signin-signup" href="/users/auth/google">Google Sign In/Sign Up</a>
        </p>
    </form>
</div>